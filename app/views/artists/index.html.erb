<div class="artist-wrapper">
  <div class="container">
    <div class="row">

      <!-- Indent -->
      <div class="col-lg-2"></div>

      <!-- Content -->
      <div class="col-12 col-md-12 col-lg-8" data-toggle="modal" data-target="#exampleModalLong">
        <div class="row">
          <% @artists.each do |artist| %>
              <div class="col-4 col-md-3 col-lg-3">
                <%= image_tag artist.image.url, class: 'img-fluid' %>
                <%= artist.name %>
              </div>
          <% end %>
        </div>
      </div>

      <!-- Indent -->
      <div class="col-lg-2"></div>

    </div>
  </div>
</div>
